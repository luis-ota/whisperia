{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whisperia",
  "version": "0.1.0",
  "identifier": "com.whisperia.app",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "Whisperia",
        "label": "main",
        "width": 400,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "skipTaskbar": false
      },
      {
        "title": "Whisperia Overlay",
        "label": "overlay",
        "width": 400,
        "height": 150,
        "resizable": false,
        "fullscreen": false,
        "center": false,
        "visible": false,
        "skipTaskbar": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "category": "Utility",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
